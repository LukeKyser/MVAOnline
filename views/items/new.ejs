<% include ../partials/header %>

    <div class="row">
		<div class="col s12 m12">
			<div class="card-panel glow-card admin-input">
				<form action="/items" method="post" enctype="multipart/form-data">
					<h1>New Item</h1>
					<div class="input-field">
						<input type="text" placeholder="Item Name" id="name" name="name" required>
						<label for="name">Item Name</label>
					</div>
					<div class="input-field">
						<input type="text" placeholder="Description" id="description" name="description" required>
						<label for="description">Description</label>
					</div>
					<div class="input-field">
						<input type="text" placeholder="Size" id="size" name="size" required>
						<label for="size">Size</label>
					</div>
					<div class="input-field">
						<input type="text" placeholder="Price" id="price" name="price" required>
						<label for="price">Price</label>
					</div>
					<div class="input-field">
						<input type="text" placeholder="Canvas" id="canvas" name="canvas" required>
						<label for="canvas">Canvas</label>
					</div>
					
					<!-- IMAGE FILES -->
					
					<div class="file-field input-field">
						<div class="btn btn-custom">
							<span>Image 1</span>
							<input name="image1" type="file" required>
						</div>
						<div class="file-path-wrapper">
							<input class="file-path validate" type="text" required>
						</div>
					</div>
					
					<!-- ***************************** -->
					
					<div class="file-field input-field">
						<div class="btn btn-custom">
							<span>Image 2</span>
							<input name="image2" type="file" required>
						</div>
						<div class="file-path-wrapper">
							<input class="file-path validate" type="text" required>
						</div>
					</div>
					
					<button class="btn btn-custom">Create</button>
				</form>
				<a href="javascript:history.back()" class="btn btn-custom">Go Back</a>
			</div>
		</div>
    </div>

<% include ../partials/footer %>

