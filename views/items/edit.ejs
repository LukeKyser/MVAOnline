<% include ../partials/header %>


<div class="row">
	<div class="col s12 m12">
		<div class="card-panel glow-card admin-input">
			<form action="/items/<%=item._id%>?_method=PUT" method="post">
				<h1>Edit Item: <%= item.name %></h1>
				<div class="input-field">
					<input type="text" value="<%= item.name %>" id="name" name="name" required>
					<label for="name">Item Name</label>
				</div>
				<div class="input-field">
					<input type="text" value="<%= item.description %>" id="description" name="description" required>
					<label for="description">Description</label>
				</div>
				<div class="input-field">
					<input type="text" value="<%= item.size %>" id="size" name="size" required>
					<label for="size">Size</label>
				</div>
				<div class="input-field">
					<input type="text" value="<%= item.price %>" id="price" name="price" required>
					<label for="price">Price</label>
				</div>
				<div class="input-field">
					<input type="text" value="<%= item.canvas %>" id="canvas" name="canvas" required>
					<label for="canvas">Canvas</label>
				</div>
				<div class="switch">
					<label>
						For Sale
						<input type="checkbox" name="hold">
						<span class="lever"></span>
						On Hold
					</label>
				</div>
				<br>
				<br>
				<button class="btn btn-custom">Edit</button>
			</form>
			<a href="javascript:history.back()" class="btn btn-custom">Go Back</a>
		</div>
	</div>
</div>


<% include ../partials/footer %>

