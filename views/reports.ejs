<% include partials/header %> 

<section id="popular" class="section section-popular scrollspy">
    <div class="report">
		<% let totalIncome = 0, totalSales = 0; %>
        <div class="row">
            <h4 class="center page-header"><span class="span-header">Order</span> Report</h4>
        </div>
		<div class="row">
			<table class="white">
				<thead>
					<tr>
						<th>Date</th>
						<th>Item Name</th>
						<th>Description</th>
						<th>Price</th>
						<th>Buyer</th>
						<th>Phone</th>
						<th>Email</th>
						<th>Address</th>
					</tr>
				</thead>
				<tbody>
					<% reports.forEach(function(report){
						totalSales += 1;
						totalIncome += parseInt(report.itemPrice); %>
					<tr>
						<td><%= report.dateTime %></td>
						<td><%= report.itemName %></td>
						<td><%= report.itemDescription %></td>
						<td>$<%= report.itemPrice %></td>
						<td><%= report.buyerName %></td>
						<td><%= report.buyerPhone %></td>
						<td><%= report.buyerEmail %></td>
						<td><%= report.buyerStreetAddress %> - <%= report.buyerCityState %></td>
						<td>
							<form action="/<%=report._id%>/remove?_method=DELETE" method="POST"><button class="btn btn-custom-delete">DELETE</button></form>
						</td>
					</tr>
					<% }); %>
				</tbody>
			</table>
		</div>
		<div class="row">
            <h4 class="center page-header"><span class="span-header">Totals</span></h4>
        </div>
		<div class="row">
			<table class="white">
				<thead>
					<tr>
						<th>Total Sales</th>
						<th>Total Income</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= totalSales %></td>
						<td>$<%= totalIncome %></td>
					</tr>
				</tbody>
			</table>
		</div>
    </div>
</section>

<% include partials/footer %>